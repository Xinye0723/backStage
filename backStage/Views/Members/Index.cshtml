@model IEnumerable<backStage.Models.Member>

@{
    ViewData["Title"] = "會員管理";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" />


    <style>
        table.dataTable > thead th,
        table.dataTable > tbody td {
            text-align: center;
        }
        /* ===== DataTables length ↓  較長數字也不會被截掉 ===== */
        .dataTables_wrapper .dataTables_length .form-select {
            /* 讓寬度跟著內容伸縮，但又不至於太窄或太寬 */
            width: auto; /* 依內容自動 */
            min-width: 7ch; /* 能放下 3 位數 (100) + 箭頭 */
            max-width: 12ch; /* 預防 4 位數以上撐破版面 */
            /* 內距：右側多留空間給箭頭，文字才不會被蓋到 */
            padding: .25rem 2.3rem .25rem .8rem;
            /* 字置中，看起來比較對齊 */
            text-align: center;
            /* 調整箭頭（background-image）的相對位置 */
            background-position: right .7rem center;
        }

        /* 行動裝置：如果字體再縮小一些，就把 min-width 略放大 */
        @@media (max-width: 576px) {
            .dataTables_wrapper .dataTables_length .form-select {
                min-width: 8ch;
            }
        }

    </style>
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-12" style="max-width:1600px;">
            <div class="card shadow-sm">
                <div class="ms-3 mt-3">
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fa-solid fa-user-plus me-1"></i>新增會員
                    </a>
                </div>

                <div class="card-body">
                    <table id="memberTable"
                           class="table table-striped table-hover align-middle nowrap text-center"
                           style="width:100%;">
                        <thead class="table-active">
                            <tr>
                                <th>姓名</th>
                                <th>性別</th>
                                <th>生日</th>
                                <th>Email</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MemberName</td>
                                    <td>@item.MemberGenderDisplay</td>
                                    <td>@item.MemberBirthDateDisplay</td>
                                    <td>@item.MemberEmail</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.MemberId"
                                           class="btn btn-sm btn-warning me-1" title="編輯">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.MemberId"
                                           class="btn btn-sm btn-info me-1 text-white" title="詳細">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MemberId"
                                           class="btn btn-sm btn-danger" title="刪除">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div> <!-- /card-body -->
            </div> <!-- /card -->
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery（DataTables 依賴）-->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>

    <script>
        $(function () {
            $('#memberTable').DataTable({
                responsive: true,
                autoWidth: false,
                columnDefs: [
                    { targets: -1, orderable: false }          // 操作欄不排序
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/zh-HANT.json'
                }
            });
        });
    </script>
}
