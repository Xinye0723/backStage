@model backStage.Models.Member

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-2">刪除會員</h1>

<div>
    <h4>會員</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberPassword)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberPassword)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberGender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberGender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberBirthDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberBirthDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberIntroSelf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberIntroSelf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberImgUpload)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.MemberImg" alt="會員圖片" width="200" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MemberPermission)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberPermission)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MemberId" />
        <input type="submit" value="確定刪除" class="btn btn-danger" /> 
        <a class="btn btn-secondary" asp-action="Index">上一頁</a>
    </form>
</div>
