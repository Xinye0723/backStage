@{
    ViewData["Title"] = "忘記密碼";
    Layout = null; // 若想沿用共用頁面，改成 "_Layout" 或你的自訂 Layout
}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - MyApp</title>

    <!-- Bootstrap 5 核心樣式 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons (信封圖示) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <!-- Google 字體：Noto Sans TC (優雅的中文字體) -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;600&display=swap" rel="stylesheet">
    <!-- SweetAlert2 (顯示訊息用，可視需求移除) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* 背景漸層與字體 */
        body {
            font-family: 'Noto Sans TC', sans-serif;
            background-color:darkgray;
            min-height: 100vh;
        }
    </style>
</head>
<body>
    <!-- 置中容器 -->
    <div class="container d-flex align-items-center justify-content-center py-5">
        <!-- 卡片 -->
        <div class="card shadow-sm border-0" style="max-width: 420px; width: 100%;">
            <div class="card-body p-4">
                <h3 class="fw-bold text-center mb-4"><i class="bi bi-envelope-check-fill me-2"></i>忘記密碼</h3>

                <form asp-action="ForgotPassword" method="post" novalidate>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="InputEmail" name="email" placeholder="name@example.com" required />
                        <label for="InputEmail">請輸入您的 Email</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">寄送重設密碼連結</button>
                </form>
            </div>
        </div>
    </div>

    @* 以 SweetAlert2 顯示訊息 *@
    @if (ViewBag.Message != null)
    {
        <script>
            Swal.fire({
                icon: 'info',
                title: '@ViewBag.Message',
                confirmButtonText: '確定'
            });
        </script>
    }

    <!-- Bootstrap 5 JavaScript (含 Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
