@model backStage.viewModels.SeatBatchVM

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-3">新建影廳</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label mb-2 fs-3">影廳號碼</label>
                <input asp-for="TheaterNumber" class="form-control mb-3" />
                <span asp-validation-for="TheaterNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確認新增" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">取消新增</a>
            </div>
            
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
