@model backStage.Models.Movie

@{
    ViewData["Title"] = "電影刪除";
}

<h1>@ViewData["Title"]</h1>

<h4 style="color:red">🤔很難看嗎？票房有這麼爛？</h4>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PosterPicture)
        </dt>
        <dd class = "col-sm-10">
            <partial name="_ShowPicturePartial" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieNameChinese)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieNameChinese)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieNameEnglish)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieNameEnglish)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieRatingId)
        </dt>
        <dd class = "col-sm-10">
            @Model.MovieRating?.Description (@Model.MovieRating?.RatingCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Model.Duration 分鐘
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsReleased)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsReleased)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsUpcoming)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsUpcoming)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsNowShowing)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsNowShowing)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsEnded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsEnded)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Starring)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Starring)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Production)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Production)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Distributor)
        </dt>
