@model backStage.Models.MovieGroup

@{
    ViewData["Title"] = "Delete";
}

<h1>刪除頁面</h1>

<h5>確定要刪除這活動嗎?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.MovieId)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.MovieId)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.ShowTimeId)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.ShowTimeId)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.GroupName)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.GroupName)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.LeaderMemberId)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.LeaderMemberId)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.MaxMembers)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.MaxMembers)
        </dd>
        <dt class="col-sm-2 mt-2">
            活動圖片
        </dt>
        <dd class="col-sm-10 mt-2">
            @if (!string.IsNullOrEmpty(Model.GroupNote))
            {
                <img src="@("/images/mg/" + System.IO.Path.GetFileName(Model.GroupNote))" width="200" alt="活動圖片" />
            }
            else
            {
                <span>沒有圖片</span>
            }
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.CreateTime)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.CreateTime)
        </dd>
        <dt class = "col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10 mt-2">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GroupId"/>
        <input type="submit" value="刪除" class="btn btn-danger mt-2"
               onclick="return confirm('確定要刪除這個活動嗎？');" />
        |
        <a asp-action="Index" id="goHome" class="btn btn-secondary mt-2">回首頁</a>
    </form>
</div>
