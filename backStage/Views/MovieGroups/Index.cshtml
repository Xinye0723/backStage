@model IEnumerable<backStage.Models.MovieGroup>

@{
    ViewData["Title"] = "Index";
}

@* <h1>活動列表</h1> *@
@* <p>
    <a asp-action="Create">新增活動</a>
</p> *@

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-12" style="max-width:1800px;">
            <div class="card shadow-sm" style="width:98%;">
                <div class="card-header text-white" style="background:#2C3E50";>
                    <h5 class="mb-0">活動列表</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <a asp-action="Create" class="btn btn-primary text-white">新增活動</a>
                    </div>
                    <table class="table table-striped table-hover align-middle text-center">
                        <thead>
                            <tr>
                                <th>電影ID</th>
                                <th>放映時間ID</th>
                                <th>活動名稱</th>
                                <th>主辦人ID</th>
                                <th>最大人數</th>
                                <th>活動圖片</th>
                                <th>建立時間</th>
                                <th>狀態</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MovieId</td>
                                    <td>@item.ShowTimeId</td>
                                    <td>@item.GroupName</td>
                                    <td>@item.LeaderMemberId</td>
                                    <td>@item.MaxMembers</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.GroupNote))
                                        {
                                            <img src="@item.GroupNote"
                                                 alt="活動圖片"
                                                 style="object-fit:cover; border-radius:6px;" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">無</span>
                                        }
                                </td>
                                <td>
                                    @(item.CreateTime.HasValue
                                      ? item.CreateTime.Value.ToString("yyyy-MM-dd HH:mm")
                                      : "")
                                </td>
                                <td>@item.Status</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.GroupId" class="btn btn-sm btn-outline-primary">編輯</a>
                                    <a asp-action="Details" asp-route-id="@item.GroupId" class="btn btn-sm btn-outline-secondary">細節</a>
                                    <a asp-action="Delete" asp-route-id="@item.GroupId" class="btn btn-sm btn-outline-danger">刪除</a>
                                </td>
                            </tr>
                                                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


